<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
  <class name="com.infinite.jsf.provider.model.MedicalProcedure" table="medical_procedure">
 
    <id name="procedureId" column="procedure_id" type="string">
      <generator class="assigned"/>
    </id>
 
    <!-- Many-to-One Relationships -->
    <many-to-one name="appointment" class="com.infinite.jsf.provider.model.Appointment" column="appointment_id" not-null="true" lazy="false"/>
    <many-to-one name="recipient" class="com.infinite.jsf.recipient.model.Recipient" column="h_id" not-null="true" lazy="false"/>
    <many-to-one name="provider" class="com.infinite.jsf.provider.model.Provider" column="provider_id" not-null="true" lazy="false"/>
    <many-to-one name="doctor" class="com.infinite.jsf.provider.model.Doctors" column="doctor_id" not-null="true" lazy="false"/>
 
    <!-- Date and Enum Properties -->
    <property name="scheduledDate" column="scheduled_date" type="date"/>
    <property name="procedureDate" column="procedure_date" type="date" not-null="true"/>
    <property name="fromDate" column="from_date" type="timestamp" not-null="true"/>
    <property name="toDate" column="to_date" type="timestamp"/>
    <property name="createdAt" column="created_at" type="timestamp" not-null="true"/>
 
     <property name="procedureStatus" column="procedure_status" not-null="true">
  <type name="org.hibernate.type.EnumType">
    <param name="enumClass">com.infinite.jsf.provider.model.ProcedureStatus</param>
    <param name="useNamed">true</param>
  </type>
</property>
 
<property name="type" column="procedure_type" not-null="true">
  <type name="org.hibernate.type.EnumType">
    <param name="enumClass">com.infinite.jsf.provider.model.ProcedureType</param>
    <param name="useNamed">true</param>
  </type>
</property>
 
 
    <!-- Text Properties -->
    <property name="diagnosis" column="diagnosis" type="text" not-null="true"/>
    <property name="recommendations" column="recommendations" type="text"/>
 
    <set name="prescriptions" table="prescription" cascade="all" lazy="false" inverse="true">
      <key column="procedure_id" not-null="true"/>
      <one-to-many class="com.infinite.jsf.provider.model.Prescription"/>
    </set>
 
    <set name="logs" table="procedure_daily_log" cascade="all" lazy="false" inverse="true">
      <key column="procedure_id" not-null="true"/>
      <one-to-many class="com.infinite.jsf.provider.model.ProcedureDailyLog"/>
    </set>
 
  </class>
  
  <query name="MedicalProcedure.fetchWithDetailsByDoctorId">
      SELECT DISTINCT p
      FROM MedicalProcedure p
      LEFT JOIN FETCH p.prescription pr
      LEFT JOIN FETCH pr.prescribedMedicines
      LEFT JOIN FETCH pr.tests
      WHERE p.doctor.doctorId = :docId
  </query>
</hibernate-mapping>