<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.infinite.jsf.provider.model">

  <class name="Appointment" table="Appointment">

    <id name="appointmentId" column="appointment_id" type="string">
      <generator class="assigned"/>
    </id>

    <many-to-one name="doctor" class="com.infinite.jsf.provider.model.Doctors" column="doctor_id" not-null="true" lazy="false"/>
    <many-to-one name="recipient" class="com.infinite.jsf.recipient.model.Recipient" column="h_id" not-null="true" lazy="false"/>
    <many-to-one name="availability" class="com.infinite.jsf.provider.model.DoctorAvailability" column="availability_id" not-null="true" lazy="false"/>
    <many-to-one name="provider" class="com.infinite.jsf.provider.model.Provider" column="provider_id" not-null="true" lazy="false"/>

    <property name="requestedAt" column="requested_at" type="timestamp"/>
    <property name="bookedAt" column="booked_at" type="timestamp"/>
    <property name="cancelledAt" column="cancelled_at" type="timestamp"/>
    <property name="completedAt" column="completed_at" type="timestamp"/>

    <property name="status">
      <column name="status"/>
      <type name="org.hibernate.type.EnumType">
        <param name="enumClass">com.infinite.jsf.provider.model.AppointmentStatus</param>
        <param name="type">12</param>
      </type>
    </property>

    <property name="slotNo" column="slot_no" type="int"/>
    <property name="start" column="start" type="timestamp"/>
    <property name="end" column="end" type="timestamp"/>
    
    <property name="notes" column="notes" type="text"/>

    <set name="medicalProcedure" cascade="all" inverse="true" lazy="true">
      <key column="appointment_id"/>
      <one-to-many class="com.infinite.jsf.provider.model.MedicalProcedure"/>
    </set>

  </class>

</hibernate-mapping>
